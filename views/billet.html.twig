{% extends "layout.html.twig" %}

{% block title %}{{ billet.BilletTitle }}{% endblock %}

{% block content %}
<p>
    <h2>{{ billet.BilletTitle }}</h2>
    <p>{{ billet.BilletContent | raw }} </p>
    
    <h3>Commentaires</h3>
    {% for comment in comments %}
        <strong>{{ comment.ComAuthor.username }}</strong> dit : {{ comment.ComContent }}<br>
    {% else %}
       Il n'y a pas encore de commentaire.
    {% endfor %}

    <h3>Ajouter un commentaire</h3>
    {% if commentForm %}
        {{ form_start(commentForm) }}
            <div class="form-group">
                {{ form_errors(commentForm.com_content) }}
                {{ form_widget(commentForm.com_content, { 'attr':  {
                    'rows': '4',
                    'class': 'form-control',
                    'placeholder': 'Entrer votre commentaire'
                }}) }}
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Publier un commentaire" />
            </div>
        {{ form_end(commentForm) }}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %} 

    {% else %}
        <a href="{{ path('login') }} ">Se connecter</a> pour ajouter des commentaires.
    {% endif %}
</p>
{% endblock %}