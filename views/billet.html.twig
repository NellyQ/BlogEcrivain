{% extends "layout.html.twig" %}

{% block title %}{{ billet.BilletTitle }}{% endblock %}

{% block content %}
<p>
    <h2>{{ billet.BilletTitle }}</h2>
    <p>{{ billet.BilletContent }}</p>
    <h3>Comments</h3>
    {% for comment in comments %}
        <strong>{{ comment.ComAuthor.username }}</strong> said : {{ comment.ComContent }}<br>
    {% else %}
        No comments yet.
    {% endfor %}

    <h3>Add a comment</h3>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        Soon!
    {% else %}
        <a href="{{ path('login') }} ">Log in</a> to add comments.
    {% endif %}
</p>
{% endblock %}